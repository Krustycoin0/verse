{
  "$schema": "https://turborepo.org/schema.json",
  "pipeline": {
    "build": {
      "dependsOn": ["^build", "generate"],
      "outputs": ["build/**"]
    },
    "client#build": {
      "dependsOn": ["^build", "generate"],
      "outputs": [".next/**"],
      "env": [
        "BUNDLE_ANALYZE",
        "DATABASE_URL",
        "ETH_PROVIDER",
        "NEXT_PUBLIC_ALCHEMY_ID",
        "NEXT_PUBLIC_AXIOM_INGEST_ENDPOINT",
        "NEXT_PUBLIC_CDN_ENDPOINT",
        "NEXT_PUBLIC_DEFAULT_HOST",
        "NEXTAUTH_SECRET",
        "NEXTAUTH_URL",
        "NODE_ENV",
        "S3_ACCESS_KEY_ID",
        "S3_BUCKET",
        "S3_ENDPOINT",
        "S3_REGION",
        "S3_SECRET",
        "VERCEL_URL"
      ]
    },
    "host#build": {
      "dependsOn": ["^build", "generate"],
      "outputs": ["build/**"],
      "env": [
        "MEDIASOUP_ANNOUNCED_IP",
        "MEDIASOUP_LISTEN_IP",
        "RTC_MAX_PORT",
        "RTC_MIN_PORT",
        "SSL_CERT",
        "SSL_KEY"
      ]
    },
    "lint": {},
    "generate": {
      "cache": false
    },
    "client#generate": {
      "inputs": ["prisma/schema.prisma"]
    },
    "deploy": {
      "dependsOn": ["lint", "build"],
      "cache": false
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
