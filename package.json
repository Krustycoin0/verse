{
  "name": "wired",
  "version": "0.0.0",
  "private": true,
  "license": "GPL-3.0-or-later",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "dotenv -c -- turbo build",
    "deploy": "turbo deploy",
    "dev": "dotenv -c -- turbo dev",
    "format": "prettier --write .",
    "generate": "turbo generate",
    "postinstall": "patch-package",
    "lint": "turbo lint"
  },
  "devDependencies": {
    "dotenv-cli": "^7.1.0",
    "patch-package": "^6.5.1",
    "postinstall-postinstall": "^2.1.0",
    "prettier": "^2.8.4",
    "prettier-plugin-packagejson": "^2.4.3",
    "prettier-plugin-prisma": "^4.10.0",
    "turbo": "^1.8.3"
  },
  "packageManager": "yarn@1.22.19",
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=7.0.0"
  }
}
